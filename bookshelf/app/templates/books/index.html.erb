<h1>Bookshelf::Views::Books::Index</h1>
<p style="color: green"><%=  flash[:notice] %></p>

<% content_for :title, "Books" %>

<h1>Welcome to Rails Bookshelf</h1>

<div id="books">
  <% books.each do |book| %>
    <%= render "book", book: book %>
    <p>
      <%= link_to "Show this book", routes.path(:show_book, id: book.id) %>
    </p>
  <% end %>
</div>

<%= link_to "New book", routes.path(:new_book) %>
